body
 margin 0
 padding 0
 width 100%
 height 100%


.bubble-bag
 width 100%
 height 100%
 display flex
 flex-flow column nowrap
 align-items center
 justify-content center
 
.bubble
 width 400px
 height 400px
 margin 10em auto
 position relative
 background-image url("../img/bubble.png")
 background-size 100%
 background-repeat no-repeat
 background-position center
 border-radius: 50%;
 
.key
 position absolute
 color: #fff;
 font-weight: 600;
 font-size: 1.5em;
 background-color: rgba(0,0,0, 0.5);
 display flex
 flex-flow column nowrap
 align-items center
 justify-content center
 
.leaf1
  top: -10%
  left:50%
  transform: translate(-50%, -50%)
  
.leaf2
  top: -8%;
  right: 10%;
  transform: rotate(35deg);